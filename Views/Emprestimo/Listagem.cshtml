@model ICollection<Emprestimo>
@{
    ViewData["Title"] = "Listagem de Empréstimos";
}

<div class="row">
    <div class="col-md-12">
    <form class="form-inline" method="POST">
        <div class="form-group mb-2">
            <select name="TipoFiltro" class="form-control">
                <option value="Usuario">Usuário</option>
                <option value="Livro">Livro</option>
            </select>
        </div>
        <div class="form-group mb-2 mx-sm-3">
            <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
    </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
         <table class="table table-striped"> 
            <thead>
                <tr><th>Id</th>
                <th>Usuario</th>
                <th>Data Empréstimo</th>
                <th>Data Devolução</th>
                <th>Livro</th>
                <th>Autor</th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(Emprestimo e in Model)
                {
                    @if(DateTime.Compare(DateTime.Today, e.DataDevolucao)>0 || e.Devolvido==true)
                    {

                        <tr>
                        <td>@e.Id</td>
                        <td class="text-danger">@e.NomeUsuario</td>
                        <td class="text-danger">@e.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                        <td  class="text-danger">@e.DataDevolucao.ToString("dd/MM/yyyy")</td>
                        <td  class="text-danger">@e.Livro.Titulo</td>
                        <td class="text-danger">@e.Livro.Autor</td>
                        <td class="text-danger">@e.Devolvido<a href="/Emprestimo/Edicao/@e.Id" class="text-success">Editar</a></td>
                        </tr>
                        }
                        else{
                        <tr>
                        <td>@e.Id</td>
                        <td class="text-success">@e.NomeUsuario</td>
                        <td class="text-success">@e.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                        <td class="text-success">@e.DataDevolucao.ToString("dd/MM/yyyy")</td>
                        <td class="text-success">@e.Livro.Titulo</td>
                        <td class="text-success">@e.Livro.Autor</td>
                        <td class="text-success"><a href="/Emprestimo/Edicao/@e.Id">Editar</a></td>
                        
                       </tr>
                    }
                   
                }
            </tbody>
        </table>
    </div>
</div>

